<%= link_to "Show all inspections", inspections_path %>

<div class="scroller_index ml-0">
    <div class=" card-container">
      <div class="col fix_contain">
        <% @inspections.each do |inspection| %>
            <div class="card index-card"> <!-- style="width: 20rem" -->
                <!-- <img class="card-img-top" src="https://images.unsplash.com/photo-1576941089067-2de3c901e126?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1143&q=80" alt="Card image top"> -->
                <div class="card-body">
                    <%= link_to inspection.location.truncate(27, separator: /\s/), inspection_path(inspection), :class => "text-dark" %>
                        <ul>

                            <li><%= inspection.date.strftime('%B %e, %Y') %></li>
                            <li><%= inspection.time.to_time.strftime('%H:%M %p') %></li>
                            <li><%= inspection.payment_amount %></li>
                            <%# <li><strong>Job Description: </strong> <%= inspection.description</li> %>
                            <%= link_to inspection.user.username, user_path(inspection.user_id), :class => "view-profile" %></li>
                        </ul>
                </div>
            </div>
        <% end %>
      </div>
    </div>
</div>
